<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_left_header"
        android:layout_marginRight="@dimen/pad_left_header"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_top"
            android:text="@string/description_title_detail"
            android:textColor="@color/green_sky_landing"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right"
            android:layout_marginTop="@dimen/pad_top_bottom"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/cost_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvCostDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/area_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvAreaDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/num_room_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvNumRoomDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_top"
            android:text="@string/image_title_detail"
            android:textColor="@color/green_sky_landing"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:id="@+id/llFileAttachDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right"
            android:layout_marginTop="@dimen/pad_top_ed_add_new_post"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_top"
            android:text="@string/contact_title_detail"
            android:textColor="@color/green_sky_landing"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right"
            android:layout_marginTop="@dimen/pad_top_bottom"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/phone_title_detail"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvPhoneDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top"
                android:autoLink="phone"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right"
            android:layout_marginTop="@dimen/pad_top"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</ScrollView>