<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_left_header"
            android:layout_marginRight="@dimen/pad_left_header"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/description_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top_bottom"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_top"
                    android:text="@string/cost_title_detail"
                    android:textColor="@color/green_sky_landing"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvCostDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_left_right"
                    android:layout_marginStart="@dimen/pad_left_right"
                    android:layout_marginTop="@dimen/pad_top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_top"
                    android:text="@string/area_title_detail"
                    android:textColor="@color/green_sky_landing"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvAreaDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_left_right"
                    android:layout_marginStart="@dimen/pad_left_right"
                    android:layout_marginTop="@dimen/pad_top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_top"
                    android:text="@string/num_room_title_detail"
                    android:textColor="@color/green_sky_landing"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvNumRoomDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_left_right"
                    android:layout_marginStart="@dimen/pad_left_right"
                    android:layout_marginTop="@dimen/pad_top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/image_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:id="@+id/llFileAttachDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top_ed_add_new_post"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/contact_title_detail"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvAddressDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top_bottom"
                android:text="@string/temp_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_top"
                    android:text="@string/phone_title_detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvPhoneDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_left_right"
                    android:layout_marginStart="@dimen/pad_left_right"
                    android:layout_marginTop="@dimen/pad_top"
                    android:autoLink="phone"
                    android:text="@string/temp_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/temp_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_top"
                android:text="@string/comment_title"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_left_right"
                android:layout_marginStart="@dimen/pad_left_right"
                android:layout_marginTop="@dimen/pad_top_bottom"
                android:textColor="@color/green_sky_landing"
                android:textSize="@dimen/text_comment_size"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad_bottom"
        android:layout_marginLeft="@dimen/pad_left_header"
        android:layout_marginRight="@dimen/pad_left_header"
        android:layout_marginTop="@dimen/pad_top"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_border_normal"
            android:hint="@string/post_comment_hind"
            android:singleLine="true"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/pad_left_right"
            android:layout_marginStart="@dimen/pad_left_right"
            android:background="@drawable/custom_border_select"
            android:minHeight="@dimen/min_height_button"
            android:text="@string/post_comment_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>